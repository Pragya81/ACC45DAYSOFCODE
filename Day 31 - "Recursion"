

#include <iostream>
using namespace std;
void fun(int n){
    if(n == 0)
        return;
        cout << n << endl;
        fun(n - 1);
        cout << n << endl;
    
}
int main(){
    fun(3);
    return 0;
} 

------------------------------------------------
main() -> fun(3) -> fun(2) -> fun(1) -> fun(0) -> 1 -> fun(0)
#include <iostream>
using namespace std;
void fun(int n){
    if(n == 0)
        return;
    fun(n-1);
    cout << n << endl;
    fun(n-1);
    
}
int main(){
    fun(3);
    return 0;
} 

// -----------------------------------------------------------------------
#include<iostream>
using namespace std;
int fun(int n){
    if(n == 1)
    return 0;
    else 
    return 1+fun(n/2);
}
int main(){
    cout << fun(6);
    return 0;
}

// ----------------------------------------------------------------
#include<iostream>
using namespace std;
void fun(int n){
    if(n == 0)
        return;
    fun(n/2);
    cout << (n%2);
}
int main(){
    fun(7);
    return 0;
}

