#include <iostream>
using namespace std;

int main() {
	int t1;
	cin>>t1;
	while(t1--){
	    int n;
	    cin>>n;
	    int arr[n];
	    for(int i=0;i<n;i++){
	        cin>>arr[i];
	    }
	    int z=0,c=0,x=0;
	    for(int i=0;i<n;i++){
	        if(arr[i]>0)
	        x++;
	        else if(arr[i]==0)
	        z++;
	        else
	        c++;
	    }
	    if(x==n)
	    cout<<0<<endl;
	    else if(z>=1){
	        cout<<0<<endl;
	    }else{
	        if(c%2==0)
	        cout<<0<<endl;
	        else
	        cout<<1<<endl;
	    }
	}
	
	return 0;
}
